%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Log in
    %a.general-login-icon{href: "#"}
      %i.fa.fa-facebook-official
    %p.general-login-text or
  %form#new_user.general-form.new_user{"accept-charset" => "UTF-8", :action => "/users/sign_in", :method => "post"}
    .form-group.mb-30
      .form-group.mb-30
        %label.control-label.input-label{:for => "email"} Enter Email
        %input#user_email.form-control{:autocomplete => "email", :autofocus => "autofocus", :name => "user[email]", :type => "email", :value => ""}/
    .form-group.mb-30
      .field
        %label.control-label.input-label{for: "password"} Password
        %input#password.form-control{:autocomplete => "current-password", :name => "user[password]", :type =>  "password", :placeholder => "Password"}/
        %a.help-block.in-gold-500{href: "/users/password/new"} Forgot password?
    .field.form-group.checkbox.text-center.mb-30
      %label.checkbox-label
        %input{:autocomplete => "off", :name => "user[remember_me]", :type => "hidden", :value => "0"}
          %input#user_remember_me{:class => "checkbox-input>", :hidden => "true", :name => "user[remember_me]", :type => "checkbox", :value => "1"}/
          %span.checkbox-icon
            %i.fa.fa-check
          %span.checkbox-text Remember me
    .text-center
      .actions
        %input.btn.btn-default.mb-20{"data-disable-with" => "Back to Store", :name => "commit", :type => "submit", :value => "Log in"}/
