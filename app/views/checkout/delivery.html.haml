%main.container.general-main-wrap
  %h1.general-title-margin Checkout
  %ul.steps.list-inline
    %li.step
      %span.step-number 1
      %span.step-text.hidden-xs Address
    %li.step-divider
    %li.step.active
      %span.step-number 2
      %span.step-text.hidden-xs Delivery
    %li.step-divider
    %li.step
      %span.step-number 3
      %span.step-text.hidden-xs Payment
    %li.step-divider
    %li.step
      %span.step-number 4
      %span.step-text.hidden-xs Confirm
    %li.step-divider
    %li.step
      %span.step-number 5
      %span.step-text.hidden-xs Complete
  = form_with url: checkout_payment_path, method: :get do |form|
    .visible-xs
      - DELIVERY.each do |method, values|
        .general-cart-item.divider-lg-bottom
          %table.table
            %tr
              %td.col-half
                %span.in-grey-600 Method
              %td.col-half
                .form-group.radio.mt-0.mb-0
                  %label.radio-label
                    - if cookies[:delivery] == method.to_s
                      = form.radio_button :delivery, method, hidden: "true", class: "radio-input", checked: "checked"
                    - else
                      = form.radio_button :delivery, method, hidden: "true", class: "radio-input"
                    %span.radio-icon
                    %span.radio-text= values.second
            %tr
              %td
                %span.in-grey-600 Days
              %td
                %span.font-16.fw-300= values.last
            %tr
              %td
                %span.in-grey-600 Price
              %td
                %span.font-16.in-gold-500= values.first
    .hidden-xs.mb-res-50
      %table.table.table-hover
        %thead
          %tr
            %th.col-method
              %span.in-grey-600.ml-40 Method
            %th
              %span.in-grey-600 Days
            %th
              %span.in-grey-600 Price
        %tbody
          - @delivery.each do |method, values|
            %tr
              %td
                .form-group.radio.mt-0.mb-0
                  %label.radio-label
                    - if cookies[:delivery] == method.to_s
                      = form.radio_button :delivery, method, hidden: "true", class: "radio-input", checked: "checked"
                    - else
                      = form.radio_button :delivery, method, hidden: "true", class: "radio-input"
                    %span.radio-icon
                    %span.radio-text= values.second
              %td
                %span= values.last
              %td
                %span.font-16.in-gold-500= values.first
    = render "order"
    .text-center
      %button.btn.btn-default.mb-20{type: "submit"} Save and Continue


