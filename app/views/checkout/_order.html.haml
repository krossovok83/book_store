.general-text-align.mb-60
  %p.in-gold-500.font-18 Order Summary
  %table.general-summary-table
    %tr
      %td
        %p.font-16 Item Total:
      %td
        %p.font-16= number_to_currency(cookies[:item_total], :unit => "€")
    %tr
      %td
        %p.font-16 Coupon:
      %td
        %p.font-16= number_to_currency((cookies[:coupon] || "0"), :unit => "€")
    %tr
      %td
        %p.font-16 Order Total:
      %td
        %p.font-16= number_to_currency(cookies[:order_total], :unit => "€")